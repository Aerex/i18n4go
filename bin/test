#!/usr/bin/env bash

(
  set -e

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT

PACKAGE_ROOT_PATH=github.com/maximilien/i18n4go

  export GOPATH=$(godep path):$GOPATH

  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt ./...

  echo -e "\n Integration Testing packages:"
  go test ./src/$PACKAGE_ROOT_PATH/integration/... -parallel 4 $@

  echo -e "\n Vetting packages for potential issues..."
  go tool vet src/$PACKAGE_ROOT_PATH/cmds src/$PACKAGE_ROOT_PATH/common src/$PACKAGE_ROOT_PATH/main src/$PACKAGE_ROOT_PATH/i18n
)
